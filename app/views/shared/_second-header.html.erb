<header class='top-page-header'>
  <div class='nav'>
    <ul class='header-main'>
      <li><%= link_to 'Vehicles Fix', vehicle_vehicle_fixes_path, class: "header-main-title" %></li>
      <li><%= link_to image_tag("Vehicle-fix-title.png", class:"Vehicle-fix-title-png"), "/" %></li>
    </ul>

    <ul class="search-boxes">
        <%= search_form_for @search, url: vehicle_vehicle_fixes_path do |f| %>
          <li class="search-box">
              <%= f.text_field :title_or_content_cont  ,placeholder: ' 検索する内容を入力...' ,:class => 'search-text'%>
              <%= f.submit ("検索") , class: 'search-btn'%>
          </li>
          <li class="search-box">
              <%= f.label :fix_spot_id_eq, '整備箇所区分' ,:class => 'fix-spot-label'%>
              <%= f.collection_select(:fix_spot_id_eq, FixSpot.all, :id, :name, {include_blank: "---"}, {class:"search-spot"}) %>
          </li>
        <% end %>
        
      </li>
      <li class="search-box">
        <%= search_form_for @search, url: vehicle_vehicle_fixes_path do |f| %>
          <%= f.label :fix_spot_id_eq, '整備箇所区分' %>
          <%= f.collection_select(:fix_spot_id_eq, FixSpot.all, :id, :name, {include_blank: "---"} ,:class => 'search-text') %>
        <% end %>
      </li>
    </ul>

    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><%= link_to current_user.nickname, "#", class: "user-nickname" %> </li>
      <% else %>
        <li><%= link_to 'Login', new_user_session_path, class: "login" %></li>
        <li><%= link_to 'Sign up', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>

  <%= link_to root_path, class: 'return-top' do %> 
    <span class='purchase-btn-text'>Return to Top</span>
  <% end %>



</header>