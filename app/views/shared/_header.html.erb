<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='nav'>
    <ul class='header-main'>
      <li><%= link_to 'Vehicles Fix', "/", class: "header-main-title" %></li>
      <li><%= link_to image_tag("Vehicle-fix-title.png", class:"Vehicle-fix-title-png"), "/" %></li>
    </ul>

    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><%= link_to current_user.nickname, profile_path, class: "user-nickname" %> </li>
      <% else %>
        <li><%= link_to 'Login', new_user_session_path, class: "login" %></li>
        <li><%= link_to 'Sign up', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>